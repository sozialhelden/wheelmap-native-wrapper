<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Shown when an error occurs while loading the app -->
    <string name="offline_heading">No tienes conexión.</string>

    <!-- Button to retry loading the app after an error -->
    <string name="offline_description">¡Pulsa aquí para volver a intentarlo!</string>

    <!-- Shown when the app tries to use a feature that needs an external app, but the app is not found -->
    <string name="noapp_heading">Aplicación no encontrada.</string>

    <!-- Shown when the app tries to use a feature that needs an external app, but the app is not found -->
    <string name="noapp_description">Ninguna aplicación de este dispositivo puede realizar esta acción.</string>

    <!-- Shown when the user tries to upload a photo for a place -->
    <string name="camera_access_required">Permite acceso a la cámara para añadir una foto.</string>

    <!-- Button caption used in multiple places -->
    <string name="ok">Vale</string>

    <!-- Shown when the device has no built-in camera, but the user tries to add a place photo -->
    <string name="device_has_no_camera">Lo sentimos. Añadir fotos solo funciona en dispositivos con cámara.</string>

    <!-- Shown when a storage problem occurs while taking a place photo -->
    <string name="cannot_generate_image_tempfile">Lo sentimos, no ha sido posible guardar la imagen. ¿Tienes suficiente almacenamiento?</string>

    <!-- Shown when the user cancels the camera while adding a place photo -->
    <string name="no_image_uploaded">No se ha subido ninguna imagen.</string>
</resources>
